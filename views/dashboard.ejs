<%- include('partials/header') %>

<main class="dashboard">
    <div class="container">
        <div class="dashboard-header">
            <div class="header-content">
                <h1>Control Panel</h1>
                <p class="header-subtitle">Manage your bot settings and monitor performance</p>
            </div>
            <div class="status-badge <%= botStatus %>">
                <i class="fas fa-circle"></i>
                <span><%= botStatus.toUpperCase() %></span>
            </div>
        </div>

        <div class="dashboard-grid">
            <div class="dashboard-card overview">
                <div class="card-header">
                    <h2>System Overview</h2>
                    <span class="refresh-button">
                        <i class="fas fa-sync-alt"></i>
                    </span>
                </div>
                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="fas fa-server"></i>
                        </div>
                        <div class="stat-info">
                            <h3><%= guildCount %></h3>
                            <p>Servers</p>
                        </div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stat-info">
                            <h3><%= userCount %></h3>
                            <p>Users</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="dashboard-card controls">
                <h2>Bot Controls</h2>
                <div class="control-buttons">
                    <button class="btn btn-success" onclick="startBot()">
                        <i class="fas fa-play"></i>
                    </button>
                    <button class="btn btn-danger" onclick="stopBot()">
                        <i class="fas fa-stop"></i>
                    </button>
                    <button class="btn btn-warning" onclick="restartBot()">
                        <i class="fas fa-sync"></i>
                    </button>
                </div>
            </div>

            <div class="dashboard-card performance">
                <h2>Performance Metrics</h2>
                <div class="metrics-grid">
                    <div class="metric-item">
                        <div class="metric-icon">
                            <i class="fas fa-microchip"></i>
                        </div>
                        <div class="metric-info">
                            <h4>CPU Usage</h4>
                            <p class="metric-value">32%</p>
                        </div>
                    </div>
                    <div class="metric-item">
                        <div class="metric-icon">
                            <i class="fas fa-memory"></i>
                        </div>
                        <div class="metric-info">
                            <h4>Memory</h4>
                            <p class="metric-value">512MB</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script>
    function startBot() {
        fetch('/api/bot/start', { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                if(data.status === 'success') {
                    location.reload();
                }
            });
    }
    
    function stopBot() {
        fetch('/api/bot/stop', { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                if(data.status === 'success') {
                    location.reload();
                }
            });
    }
    
    function restartBot() {
        fetch('/api/bot/restart', { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                if(data.status === 'success') {
                    location.reload();
                }
            });
    }
    </script>
    <script src="/js/dashboard.js"></script>
<%- include('partials/footer') %>
